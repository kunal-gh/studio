
{
  "entities": {
    "Photograph": {
      "title": "Photograph",
      "type": "object",
      "description": "Represents a single photograph in the portfolio.",
      "properties": {
        "title": {
          "type": "string",
          "description": "The title of the photograph."
        },
        "description": {
          "type": "string",
          "description": "A description of the photograph."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL to the photograph image.",
          "format": "uri"
        },
        "category": {
          "type": "string",
          "description": "The category of the photograph (e.g., 'portraits', 'events')."
        },
        "order": {
          "type": "number",
          "description": "The order in which the photograph should be displayed within its category."
        }
      },
      "required": ["title", "imageUrl", "category"]
    },
    "Testimonial": {
      "title": "Testimonial",
      "type": "object",
      "description": "Represents a testimonial from a client.",
      "properties": {
        "author": {
          "type": "string",
          "description": "The name of the testimonial author."
        },
        "text": {
          "type": "string",
          "description": "The text content of the testimonial."
        },
        "date": {
          "type": "string",
          "description": "The date the testimonial was given.",
          "format": "date-time"
        },
        "role": {
            "type": "string",
            "description": "The role of the client (e.g. 'Wedding Client')."
        },
        "avatar": {
            "type": "string",
            "description": "URL for the client's avatar image."
        },
        "rating": {
            "type": "number",
            "description": "Rating given by the client."
        }
      },
      "required": ["author", "text"]
    }
  },
  "auth": {
    "providers": ["anonymous"]
  },
  "firestore": {
    "photographs": {
      "schema": { "$ref": "#/entities/Photograph" },
      "description": "Stores all photographs for the portfolio."
    },
    "testimonials": {
      "schema": { "$ref": "#/entities/Testimonial" },
      "description": "Stores all testimonials from clients."
    }
  }
}
