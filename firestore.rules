rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Grant public read access to photographs and testimonials
    match /photographs/{photographId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    match /photographs/{document=**} {
        allow read: if true;
    }

    match /testimonials/{testimonialId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
     match /testimonials/{document=**} {
        allow read: if true;
    }
  }
}
