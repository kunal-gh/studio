
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to photographs and testimonials
    match /photographs/{document=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to the photographs collection
    match /photographs/{photographId} {
      allow write: if request.auth != null;
    }

    // Allow public read access to testimonials
    match /testimonials/{document=**} {
      allow read: if true;
    }

    // Allow authenticated users to write to the testimonials collection
    match /testimonials/{testimonialId} {
      allow write: if request.auth != null;
    }
  }
}
